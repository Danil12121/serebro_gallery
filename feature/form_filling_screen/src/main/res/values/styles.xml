<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomPrefixTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@drawable/bottom_sheet_background</item>
    </style>
</resources>